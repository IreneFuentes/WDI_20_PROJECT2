<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @visit, html: { class: 'form-horizontal'} do |f| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @visit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

          <ul>
            <% @visit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-group">
          <%= f.label :image, class: 'col-xs-4 label-control' %>
          <div class='col-xs-8'>
          <%= f.file_field :image %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, class: 'col-xs-4 label-control' %>
          <div class='col-xs-8'>
          <%= f.text_area :description, class: 'form-control', rows: 6 %>
        </div>
        </div>
        <div class="form-group">
         <%= f.label :country, class: 'col-xs-4 label-control' %>
         <div class='col-xs-8'>
          <select name="visit[country_id]">
            <% @countries.each do |country| %>
            <option value="<%= country.id %>"><%= country.name %></option>
            <% end %>
          </select>
        </div>
         </div>
        <!-- AÃ±ado el campo de texto para el comentario de cada visita -->

      </div>
      <div class='panel-footer'>
        <%= f.submit "Save", class: 'btn btn-default' %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class='row'>
    <div class="col-md-6 col-md-offset-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit User</h3>
        </div>
        <div class="panel-body">

          <div class="form-group">
            <%= f.label :profile_picture, class: 'col-xs-4 label-control' %>
            <div class='col-xs-8'>
              <%= f.text_field :profile_picture, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class: 'col-xs-4 label-control'  %>

            <div class='col-xs-8'>
              <%= f.text_field :description, class: 'form-control'  %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :favorite_country, class: 'col-xs-4 label-control'  
            %>
            <div class='col-xs-8'>
              <%= f.text_field :favorite_country, class: 'form-control'  %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'col-xs-4 label-control'  %>
            <div class='col-xs-8'>
              <%= f.email_field :email, class: 'form-control' , autofocus: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'col-xs-4 label-control'  %> 

            <div class='col-xs-8'>
              <%= f.password_field :password, class: 'form-control' , autocomplete: "off" %>
              <span id="helpBlock" class="help-block">(leave blank if you don't want to change it)</span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation , class: 'col-xs-4 label-control' %>
            <div class='col-xs-8'>
              <%= f.password_field :password_confirmation, class: 'form-control' , autocomplete: "off" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: 'col-xs-4 label-control'  %>
            <div class='col-xs-8'>
              <%= f.password_field :current_password, class: 'form-control' , autocomplete: "off" %>
              <span id="helpBlock" class="help-block">(we need your current password to confirm your changes)</span>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit "Update", class: 'btn btn-default' %>
        </div>

      </div>
      <% end %>

